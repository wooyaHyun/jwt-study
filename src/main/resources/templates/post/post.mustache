<script>

$("#postsCall").click(function(){
    $.ajax({
        type: 'GET',
        url: '/api/v1/posts/me'
    }).done(function(data){
        console.log(data);
        $("#tokenId").text(data);
    }).fail(function(error){
        console.log(error);
    });
});




</script>


